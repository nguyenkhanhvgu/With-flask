# Flask Blog Application Production Environment Variables
# Copy this file to .env.prod and update the values for production

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-very-secure-secret-key-for-production

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://bloguser:secure_password@db:5432/blogdb
POSTGRES_DB=blogdb
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration
MAIL_SERVER=smtp.your-domain.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your-secure-email-password

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_USERNAME=admin

# Security Configuration
WTF_CSRF_ENABLED=1
WTF_CSRF_TIME_LIMIT=3600

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=logs/production.log

# Pagination Configuration
POSTS_PER_PAGE=10
COMMENTS_PER_PAGE=20

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://redis:6379/1

# Production Configuration
TESTING=0
PRESERVE_CONTEXT_ON_EXCEPTION=0

# SSL Configuration (if using HTTPS)
SSL_DISABLE=0

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=1

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5